# Docker aliases.
alias d="docker"
alias dc="docker-compose"
alias dpsa="docker ps -a --format 'table {{.ID}}\t{{.Names}}\t{{.Status}}\t{{.Ports}}'"

# Frequently used utility aliases.
alias c="clear"
alias e="exit"

# Playwright aliases
alias pw="npx playwright"
alias pwst="pw show-trace"

# lsd aliases
alias ls='lsd'
alias ll='ls -l'
alias la='ls -A'
alias lla='ls -lA'
alias lt='ls --tree'

# No more regular vi
alias vi='nvim'

# Lazygit alias
alias gg='lazygit'

# Python alias
alias py='python'

# Tmuxinator alias
alias mux='tmuxinator'

